@model ClienteModel
@{
    ViewData["Title"] = "Editar Cliente";
}
<div class="text">

    <h1 class="display-4">@ViewData["Title"]</h1>

    <form asp-controller="Clientes" asp-action="Atualizar" method="post">

        <input type="hidden" asp-for="Id"/>
        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Enter Name">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="text" asp-for="Email" class="form-control" placeholder="example@example.com">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="mb-3">
            <label for="celular" class="form-label">Celular</label>
            <input type="text" asp-for="Celular" class="form-control" placeholder="(xx)xxxxx-xxxx">
            @Html.ValidationMessageFor(x => x.Celular)
        </div>
        <button type="submit" class="btn btn-primary">Atualizar</button>
        <a class="btn btn-secondary" asp-controller="Clientes" asp-action="Index" role="button">Voltar</a>
    </form>
</div>
